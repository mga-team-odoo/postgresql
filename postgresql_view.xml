        <menuitem id="menu_postgresql_stats" 
            parent="menu_postgresql"
            sequence="20"
            name="Statistics"/>

        <record id="view_postgresql_activity_tree" model="ir.ui.view">
            <field name="name">postgres.activity.tree</field>
            <field name="model">postgres.activity</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Activity">
                    <field name="pid"/>
                    <field name="dbuser"/>
                    <field name="hostip"/>
                    <field name="hostname"/>
                    <field name="appname"/>
                    <field name="start_backend"/>
                    <field name="start_transaction"/>
                    <field name="start_query"/>
                    <button string="Disconnect" icon="gtk-cancel" type="object" name="disconnect"
                        confirm="Are you sure you want to disconnect this client?"/>
                </tree>
            </field>
        </record>

        <record id="view_postgresql_activity_form" model="ir.ui.view">
            <field name="name">postgres.activity.form</field>
            <field name="model">postgres.activity</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Activity">
                    <field name="name"/>
                    <field name="pid"/>
                    <field name="dbuser"/>
                    <field name="hostip"/>
                    <field name="hostname"/>
                    <field name="appname"/>
                    <field name="start_backend"/>
                    <field name="start_transaction"/>
                    <field name="start_query"/>
                    <field name="query"/>
                    <separator string="Action" colspan="4"/>
                    <button string="Disconnect" icon="gtk-cancel" type="object" name="disconnect"
                        confirm="Are you sure you want to disconnect this client?"/>
                </form>
            </field>
        </record>

        <record id="view_postgresql_activity_search" model="ir.ui.view">
            <field name="name">postgres.activity.search</field>
            <field name="model">postgres.activity</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Activity">
                    <field name="name" select="True"/>
                    <field name="pid"/>
                    <field name="dbuser"/>
                    <field name="hostip"/>
                    <field name="hostname"/>
                    <field name="appname"/>
                    <group expand="0" string="Group By...">
                        <filter string="Database Users" name="group_dbuser" icon="terp-personal" domain="[]"  context="{'group_by':'dbuser'}"/>
                        <filter string="Host IP" name="group_hostip" icon="terp-stage" domain="[]"  context="{'group_by':'hostip'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_postgresql_activity_view">
            <field name="name">Activity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">postgres.activity</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_postgresql_activity_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_postgresql_activity_view_form">
            <field name="act_window_id" ref="act_open_postgresql_activity_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_postgresql_activity_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_postgresql_activity_view_tree">
            <field name="act_window_id" ref="act_open_postgresql_activity_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_postgresql_activity_tree"/>
        </record>

        <menuitem id="menu_postgresql_activity"
            parent="menu_postgresql_stats"
            sequence="20"
            action="act_open_postgresql_activity_view"/>

        <!-- ************************************************************** -->
        <!-- ** postgresql locks view************************************** -->
        <!-- ************************************************************** -->
        <record id="view_postgres_lock_tree" model="ir.ui.view">
            <field name="name">postgres.lock.tree</field>
            <field name="model">postgres.lock</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Locks">
                    <field name="blocked_pid"/>
                    <field name="blocked_user"/>
                    <field name="blocked_statement"/>
                    <field name="blocked_duration"/>
                    <field name="blocking_pid"/>
                    <field name="blocking_user"/>
                    <field name="blocking_statement"/>
                    <field name="blocking_duration"/>
                </tree>
            </field>
        </record>

        <record id="view_postgres_lock_form" model="ir.ui.view">
            <field name="name">postgres.lock.form</field>
            <field name="model">postgres.lock</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Locks">
                    <field name="blocked_pid"/>
                    <field name="blocked_user"/>
                    <field name="blocked_statement"/>
                    <field name="blocked_duration"/>
                    <field name="blocking_pid"/>
                    <field name="blocking_user"/>
                    <field name="blocking_statement"/>
                    <field name="blocking_duration"/>
                </form>
            </field>
        </record>

        <record id="view_postgres_lock_search" model="ir.ui.view">
            <field name="name">postgres.lock.search</field>
            <field name="model">postgres.lock</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Locks">
                    <field name="blocked_pid"/>
                    <field name="blocked_user"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_postgres_lock_view">
            <field name="name">Locks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">postgres.lock</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_postgres_lock_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_postgres_lock_view_form">
            <field name="act_window_id" ref="act_open_postgres_lock_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_postgres_lock_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_postgres_lock_view_tree">
            <field name="act_window_id" ref="act_open_postgres_lock_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_postgres_lock_tree"/>
        </record>

        <menuitem id="menu_postgres_lock"
            parent="menu_postgresql_stats"
            sequence="20"
            action="act_open_postgres_lock_view"/>

    </data>
</openerp>
